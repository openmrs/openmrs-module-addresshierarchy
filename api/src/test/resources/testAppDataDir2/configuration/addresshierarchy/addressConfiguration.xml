<addressConfiguration>
    <wipe>true</wipe>
    <addressComponents>
        <addressComponent>
            <field>COUNTRY</field>
            <nameMapping>Country</nameMapping>
            <sizeMapping>40</sizeMapping>
            <elementDefault>United States</elementDefault>
            <requiredInHierarchy>true</requiredInHierarchy>
        </addressComponent>
        <addressComponent>
            <field>STATE_PROVINCE</field>
            <nameMapping>State</nameMapping>
            <sizeMapping>40</sizeMapping>
            <requiredInHierarchy>true</requiredInHierarchy>
        </addressComponent>
        <addressComponent>
            <field>COUNTY_DISTRICT</field>
            <nameMapping>County</nameMapping>
            <sizeMapping>40</sizeMapping>
            <requiredInHierarchy>true</requiredInHierarchy>
        </addressComponent>
        <addressComponent>
            <field>CITY_VILLAGE</field>
            <nameMapping>Citi</nameMapping>
            <sizeMapping>40</sizeMapping>
            <requiredInHierarchy>true</requiredInHierarchy>
        </addressComponent>
        <addressComponent>
            <field>NEIGHBORHOOD_CELL</field>
            <nameMapping>Neighborhood</nameMapping>
            <sizeMapping>80</sizeMapping>
            <requiredInHierarchy>false</requiredInHierarchy>
        </addressComponent>
    </addressComponents>
    <lineByLineFormat>
        <string>neighborhoodCell</string>
        <string>cityVillage</string>
        <string>countyDistrict, stateProvince</string>
        <string>country</string>
    </lineByLineFormat>
    <addressHierarchyFile>
        <filename>address-hierarchy-entries.csv</filename>
        <entryDelimiter>,</entryDelimiter>
        <identifierDelimiter>^</identifierDelimiter>
    </addressHierarchyFile>
</addressConfiguration>